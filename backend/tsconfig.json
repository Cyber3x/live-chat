{
    "compilerOptions": {
        "lib": ["es2021", "es6", "dom"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "typeRoots": ["@types", "./node_modules/@types"],
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
